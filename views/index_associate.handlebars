<div class="container"> 
  <div class="jumbotron"> 
    <img src="/assets/images/crafted_burgers.jpg"> 
    <h1> Eat-Da-Burger App! </h1>
    <p> Manage the burger you want </p>
  </div>

  {{!-- burger list before being eaten --}}
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <div class="panel-panel default">
        <ul class="list-group">
        
        <!-- Dynamically Insert Ready Burgers Here -->
        {{#each Burgers}}
          
          {{#unless this.devoured}}
          <li class="list-group-item">
            <div class="input-group">
              <p class="lead"> {{this.burger_name}} </p>

              <p class="lead"><input name="burgerEater" type="text" class="form-control bugerEaterTextBox" placeholder="Customer Name"></p>

              <span class="input-group-btn">
                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="btn btn-default btn-lg" type="submit"> DEVOUR! </button>
                </form>
              </span>
            </div>
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>


    {{!-- burger list after being eaten --}}
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="panel panel-default">
        <ul class="list-group">
        {{#each Burgers}}
          {{#if this.devoured}}
          <li class="list-group-item">
            <p class="lead">{{this.customer_name}} </p>
            <i>(Eaten by {{this.customer_name}})</i>
          </li>
          {{/if}}
        {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-10 col-md-offset-1">
    <p class="lead"> Enter your name and the name of the burger you want to eat & click the submit button. </p>

    {{!-- section to add burger & name --}}
    <form class="create-update-form" action="burgers/burger" action="burgers/customer" method="POST">
      <div class="form-group">
        <textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
      </div>

      <div class="form-group">
        <textarea class="form-control input-lg" type="text" name="customer_name" rows="3"> </textarea>
      </div>


      <button class="btn btn-default btn-lg" type="submit">Add Name!</button>
    </form>
  </div>
</div>
